<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- [component] -->
    <!-- button -->
    <style name="Wable.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Wable.Button.L" parent="Wable.Button">
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Wable.Head2</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Wable.Button.M.S" parent="Wable.Button">
        <item name="android:paddingVertical">11dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Wable.Body1</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Wable.Button.XS" parent="Wable.Button">
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Wable.Body3</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
